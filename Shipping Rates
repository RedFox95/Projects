weight = 41.5
premium_ground = 125.00
# Ground Shipping
if weight <= 2:
  cost_ground = weight*1.5 +20
  print("Cost to ship ground: $",cost_ground)
elif weight > 2 and weight <= 6:
  cost_ground = weight*3 + 20
  print("Cost to ship ground: $",cost_ground)
elif weight > 6 and weight <= 10:
  cost_ground = weight*4 + 20
  print("Cost to ship ground: $",cost_ground)
elif weight > 10:
  cost_ground = weight*4.75 + 20
  print("Cost to ship ground: $",cost_ground)
else:
  print("Error weight cannot be a negative number.")
#Drone Shipping
if weight <= 2:
  cost_drone = weight * 4.5
  print("Cost to ship drone: $",cost_drone)
elif weight >2 and weight <= 6:
  cost_drone = weight * 9
  print("Cost to ship drone: $",cost_drone)
elif weight >6 and weight <= 10:
  cost_drone = weight * 12
  print("Cost to ship drone: $",cost_drone)
elif weight > 10:
  cost_drone = weight * 14.25
  print("Cost to ship drone: $",cost_drone)

print("Cost to ship premium ground: $125")
